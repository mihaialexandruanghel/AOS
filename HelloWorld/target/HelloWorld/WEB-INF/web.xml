<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Person Web App</display-name>

	<!-- Define servlet, named helloServlet -->
	<servlet>
		<servlet-name>PersonView</servlet-name>
		<servlet-class>com.unitbv.view.PersonView</servlet-class>
	</servlet>

	<!-- Defines the path to access this Servlet -->
	<servlet-mapping>
		<servlet-name>PersonView</servlet-name>
		<url-pattern>/PersonView/*</url-pattern>
	</servlet-mapping>


</web-app>